pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'pip install -r E2E_saucedemo_website/requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'python E2E_saucedemo_website/test_saucedemo.py'
            }
        }
        stage('Code Quality') {
            steps {
                bat 'pylint E2E_saucedemo_website/*.py'
            }
        }
    }
}
